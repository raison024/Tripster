    <androidx.cardview.widget.CardView
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="35dp">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/edittxtname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"
                android:text="Place"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtrat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/star"
                android:drawablePadding="4dp"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:text="4.5"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtloc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittxtname2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/pin2"
                android:drawablePadding="4dp"
                android:drawableTint="@color/green"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:text="Location"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtcomma2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittxtname2"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/edittxtloc2"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:text=","
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtstate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittxtname2"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/edittxtloc2"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:text="State"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="75dp">

                <TextView
                    android:id="@+id/titledesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins"
                    android:text="Description"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/edittxtdesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins"
                    android:text="This is the description of the place that you wanna visit soon. Happy journey!"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mapsbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                android:background="@drawable/mapview_button"
                android:drawableLeft="@drawable/pin2"
                android:drawableTint="@color/white"
                android:drawablePadding="4dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:paddingHorizontal="60dp"
                android:text="View in Maps"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/details_favbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/favorite"
                android:backgroundTint="@color/pink"
                android:padding="7dp"
                android:scaleType="fitXY"
                app:tint="@color/pink" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


