<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceDetails"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/getstarted_bg2" />


    <ImageButton
        android:id="@+id/btnBack2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:padding="7dp"
        android:scaleType="fitXY"
        android:src="?attr/homeAsUpIndicator"
        app:tint="@color/white" />


    <ImageButton
        android:id="@+id/btnDelete2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_edit"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/details_sheet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="0dp"
        android:background="@drawable/search_shape"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/linear0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_above="@+id/linear1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/edittxtname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Place"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtrat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/star"
                android:layout_gravity="center"
                android:drawablePadding="4dp"
                android:fontFamily="@font/poppins"
                android:gravity="center|end"
                android:text="4.5"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linear2"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edittxtloc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/pin2"
                android:drawablePadding="4dp"
                android:drawableTint="@color/green"
                android:fontFamily="@font/poppins"
                android:text="Location"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtcomma2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text=", "
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtstate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:text="State"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linear3"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titledesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins"
                android:text="About the place"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtdesc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins"
                android:text="This is the description of the place that you wanna visit soon. Happy journey!"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titlenearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins"
                android:text="Nearby Hotels and Restaurants"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittxtnearby2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="This is the description of the place that you wanna visit soon. Happy journey!"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mapsbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mapview_button"
                android:drawableLeft="@drawable/pin2"
                android:drawablePadding="4dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:paddingHorizontal="60dp"
                android:text="View in Maps"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/details_favbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/favorite"
                android:backgroundTint="@color/pink"
                android:padding="7dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:tint="@color/pink" />

        </LinearLayout>

    </LinearLayout>

