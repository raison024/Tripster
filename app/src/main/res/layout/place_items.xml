<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="3dp"
    android:layout_height="190dp"
    android:layout_width="wrap_content"
    android:id="@+id/placelistlayout">

    <androidx.cardview.widget.CardView
        android:layout_width="155dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:background="@color/black"
        android:backgroundTint="@color/black">

        <ImageView
            android:id="@+id/imgplace"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:alpha=".70"
            android:scaleType="centerCrop"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:background="@drawable/blur_shape">

                <ImageButton
                android:id="@+id/list_favbutton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                    android:layout_gravity="center"
                android:padding="4dp"
                    android:background="@drawable/favorite"
                    android:backgroundTint="@color/white"
                 />

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/blur_shape"
                android:gravity="center">

                <TextView
                    android:id="@+id/list_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:drawableStart="@drawable/grid_star"
                    android:drawableTint="@color/gold"
                    android:drawablePadding="0.2dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:paddingHorizontal="7dp"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>



                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="110dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blur_shape"
                    app:blk_cornerRadius="100dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="8dp"
                        android:orientation="vertical">
                <TextView
                    android:id="@+id/txtname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="13dp"
                    android:text="Place Name"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="13dp"
                    android:text="Location"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>